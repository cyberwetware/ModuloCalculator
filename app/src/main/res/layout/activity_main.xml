<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdit"
        android:layout_gravity="center"
        android:layout_alignRight="@+id/btn_multiply"
        android:layout_alignEnd="@+id/btn_multiply"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:inputType="number"
        android:digits="0123456x-+"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn_one"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/txtEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn_two"
        android:layout_alignTop="@+id/btn_one"
        android:layout_toRightOf="@+id/btn_one"
        android:layout_toEndOf="@+id/btn_one" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn_three"
        android:layout_alignBottom="@+id/btn_two"
        android:layout_toRightOf="@+id/btn_two"
        android:layout_toEndOf="@+id/btn_two" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/btn_multiply"
        android:layout_alignBottom="@+id/btn_three"
        android:layout_toRightOf="@+id/btn_three"
        android:layout_toEndOf="@+id/btn_three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn_four"
        android:layout_below="@+id/btn_one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn_five"
        android:layout_alignBottom="@+id/btn_four"
        android:layout_toRightOf="@+id/btn_four"
        android:layout_toEndOf="@+id/btn_four" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn_six"
        android:layout_alignBottom="@+id/btn_five"
        android:layout_toRightOf="@+id/btn_five"
        android:layout_toEndOf="@+id/btn_five" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btn_subtract"
        android:layout_alignBottom="@+id/btn_six"
        android:layout_toRightOf="@+id/btn_six"
        android:layout_toEndOf="@+id/btn_six" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/btn_delete"
        android:layout_below="@+id/btn_four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn_zero"
        android:layout_alignBottom="@+id/btn_delete"
        android:layout_toRightOf="@+id/btn_delete"
        android:layout_toEndOf="@+id/btn_delete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btn_equal"
        android:layout_alignBottom="@+id/btn_zero"
        android:layout_toRightOf="@+id/btn_zero"
        android:layout_toEndOf="@+id/btn_zero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btn_add"
        android:layout_below="@+id/btn_six"
        android:layout_toRightOf="@+id/btn_six"
        android:layout_toEndOf="@+id/btn_six" />

</RelativeLayout>